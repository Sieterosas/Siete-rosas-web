---
interface Props {
  images: string[];       // rutas relativas a /public
  alt?: string;
}
const { images, alt = "foto" } = Astro.props;
---
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
  {images.map((src) => (
    <img
      src={src}
      alt={alt}
      loading="lazy"
      class="w-full h-64 object-cover rounded-2xl shadow"
    />
  ))}
</div>
