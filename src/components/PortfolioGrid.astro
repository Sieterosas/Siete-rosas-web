---
const { images = [] } = Astro.props;
---
<section class="max-w-7xl mx-auto px-6 py-16">
  <h2 class="font-serif text-3xl mb-6 text-stone-800">Portfolio destacado</h2>
  <div class="grid grid-cols-2 md:grid-cols-3 gap-3 md:gap-4">
    {images.map((src) => (
      <div class="aspect-[4/5] overflow-hidden rounded-2xl shadow">
        <img src={src} alt="Destacado" loading="lazy" class="w-full h-full object-cover" />
      </div>
    ))}
  </div>
  <div class="text-center mt-10">
    <a href="/portfolio" class="rounded-xl border border-stone-300 px-6 py-3 inline-block hover:bg-stone-50">
      Ver portfolio completo
    </a>
  </div>
</section>
