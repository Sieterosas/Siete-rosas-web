---
interface Item { href: string; title: string; src: string; alt?: string }
interface Props { items: Item[] }
const { items = [] } = Astro.props as Props;
---
<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6">
  {items.map((c) => (
    <a href={c.href} class="group block rounded-2xl overflow-hidden shadow hover:shadow-lg transition">
      <div class="relative w-full h-64">
        <img
          src={c.src}
          alt={c.alt || c.title}
          loading="lazy"
          class="absolute inset-0 w-full h-full object-cover transition-transform group-hover:scale-105"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/25 to-transparent"></div>
        <div class="absolute bottom-0 p-4">
          <h3 class="font-serif text-xl text-white drop-shadow">{c.title}</h3>
        </div>
      </div>
    </a>
  ))}
</div>
