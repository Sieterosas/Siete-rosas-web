
---
const { images=[] } = Astro.props;
---
<section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12 grid grid-cols-2 md:grid-cols-3 gap-4 md:gap-6">
  {images.map((img) => (
    <div class="aspect-[4/5] overflow-hidden rounded-2xl shadow">
      <img src={img.src} alt={img.alt} loading="lazy" class="w-full h-full object-cover"/>
    </div>
  ))}
</section>
