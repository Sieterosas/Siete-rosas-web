
---
const { title='FOTOGRAFÍA DE EVENTOS', subtitle='Fotografiamos historias de amor. La historia la escribís vosotros; nosotros la contamos con imágenes.', image='/images/home/01.webp' } = Astro.props;
---
<section class="relative h-[78vh] md:h-[86vh] w-full">
  <div class="absolute inset-0">
    <img src={image} alt="Hero" class="w-full h-full object-cover" loading="eager" />
    <div class="absolute inset-0 bg-gradient-to-b from-stone-950/40 via-stone-950/20 to-stone-900/50" />
  </div>
  <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 h-full flex flex-col items-center justify-center text-center text-white">
    <h1 class="font-sans font-extrabold tracking-tight text-4xl sm:text-5xl md:text-6xl drop-shadow">{title}</h1>
    <p class="mt-5 max-w-2xl text-stone-100/95 text-base sm:text-lg">{subtitle}</p>
  </div>
</section>
