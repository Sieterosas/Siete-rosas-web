---
export interface Props {
  title?: string;
  text?: string;
  buttonText?: string;
  href?: string;
}
const {
  title = "¿Hablamos de tu reportaje?",
  text = "Cuéntame tu fecha e idea y preparo una propuesta a medida.",
  buttonText = "Contactar",
  href = "/contacto",
} = Astro.props as Props;
---
<div class="max-w-6xl mx-auto px-6 text-center">
  <h3 class="text-2xl font-serif mb-3 text-gray-900">{title}</h3>
  <p class="text-stone-600 mb-6">{text}</p>
  <a href={href} class="inline-flex items-center px-5 py-2 rounded-xl bg-gray-900 text-white hover:bg-gray-800">
    {buttonText}
  </a>
</div>
