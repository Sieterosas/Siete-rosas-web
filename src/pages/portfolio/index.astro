---
import BaseLayout from "../../layouts/BaseLayout.astro";

// Lista de categorías
const categorias = [
  { href: "/portfolio/bodas", title: "Bodas", img: "/categorias/bodas.jpg" },
  { href: "/portfolio/comuniones", title: "Comuniones", img: "/categorias/comuniones.jpg" },
  { href: "/portfolio/newborn", title: "Newborn", img: "/categorias/newborn.jpg" },
  { href: "/portfolio/eventos", title: "Eventos", img: "/categorias/eventos.jpg" },
];
---

<BaseLayout title="Portfolio | Sieterosas Fotografía" description="Explora nuestras especialidades en fotografía: bodas, comuniones, newborn y eventos.">
  <section class="max-w-6xl mx-auto px-6 py-16">
    <h1 class="text-4xl font-serif mb-10 text-gray-800">Portfolio</h1>
    <p class="text-gray-600 mb-12">Selecciona una categoría para ver nuestros trabajos destacados:</p>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6">
      {categorias.map(c => (
        <a href={c.href} class="block rounded-lg overflow-hidden shadow hover:shadow-lg transition">
          <img src={c.img} alt={c.title} class="w-full h-40 object-cover" />
          <div class="p-3 bg-white text-center text-gray-800 font-medium">{c.title}</div>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>
