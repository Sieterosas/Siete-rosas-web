---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeroCarousel from "../components/HeroCarousel.astro";
import CategoryCards from "../components/CategoryCards.astro";
import CTASection from "../components/CTASection.astro";

// imágenes del carrusel (ajusta rutas según tu carpeta /public/hero/)
const heroImages = [
  "/hero/hero1.jpg",
  "/hero/hero2.jpg",
  "/hero/hero3.jpg",
  "/hero/hero4.jpg",
  "/hero/hero5.jpg",
];
---

<BaseLayout title="Sieterosas | Fotografía" description="Fotografía y cine emocional con estilo boho-nórdico">
  
  <!-- Carrusel de portada -->
  <HeroCarousel images={heroImages} interval={5000} />

  <!-- Especialidades -->
  <section class="max-w-6xl mx-auto px-6 py-16">
    <h2 class="text-3xl font-serif mb-8 text-gray-800">Especialidades</h2>
    <CategoryCards />
  </section>

  <!-- CTA -->
  <section class="bg-stone-100 py-16">
    <CTASection />
  </section>

</BaseLayout>
