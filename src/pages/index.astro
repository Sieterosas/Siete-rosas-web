---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.jsx";
import Hero from "../components/Hero.astro";
import CategoryCards from "../components/CategoryCards.astro";
import AboutHome from "../components/AboutHome.astro";
import PortfolioGrid from "../components/PortfolioGrid.astro";
import Testimonials from "../components/Testimonials.astro";
import CTASection from "../components/CTASection.astro";
import Footer from "../components/Footer.astro";

const categorias = [
  { href: "/portfolio/bodas",      title: "Bodas",      src: "/categorias/bodas.jpg",      alt: "Reportajes de boda" },
  { href: "/portfolio/comuniones", title: "Comuniones", src: "/categorias/comuniones.jpg", alt: "Reportajes de comunión" },
  { href: "/portfolio/newborn",    title: "Newborn",    src: "/categorias/newborn.jpg",    alt: "Sesiones newborn" },
  { href: "/portfolio/eventos",    title: "Eventos",    src: "/categorias/eventos.jpg",    alt: "Eventos / Social" },
];

const destacados = [
  "/destacados/01.jpg",
  "/destacados/02.jpg",
  "/destacados/03.jpg",
  "/destacados/04.jpg",
  "/destacados/05.jpg",
  "/destacados/06.jpg",
];
---

<BaseLayout title="Sieterosas – Fotografía" description="Bodas, comuniones, newborn y eventos con un estilo elegante, boho–nórdico.">
  <Header />

  <!-- Portada -->
  <Hero />

  <!-- Categorías -->
  <CategoryCards items={categorias} />

  <!-- Sobre mí -->
  <AboutHome />

  <!-- Portfolio destacado -->
  <PortfolioGrid images={destacados} />

  <!-- Testimonios -->
  <Testimonials />

  <!-- CTA -->
  <CTASection />

  <Footer />
</BaseLayout>
