
---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.jsx";
---
<BaseLayout title="Contacto – Siete Rosas" description="Cuéntanos tu idea y consulta disponibilidad.">
  <Header />
  <section class="bg-stone-100 py-16">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="font-serif text-4xl mb-6">Contacto</h1>
      <form class="grid gap-4 max-w-xl">
        <input type="text" placeholder="Nombre" class="rounded-xl border border-stone-300 p-3" />
        <input type="email" placeholder="Email" class="rounded-xl border border-stone-300 p-3" />
        <textarea placeholder="Mensaje" rows="4" class="rounded-xl border border-stone-300 p-3"></textarea>
        <button type="submit" class="rounded-xl bg-stone-900 text-white px-5 py-3">Enviar</button>
      </form>
      <p class="text-stone-600 text-sm mt-4">También puedes escribirnos por WhatsApp o Instagram.</p>
    </div>
  </section>
</BaseLayout>
---
import BaseLayout from "../layouts/BaseLayout.astro";
const phone = "+34 600 000 000";
const email = "hola@sieterosas.com";
const whatsapp = "https://wa.me/34600000000";
---
<BaseLayout title="Contacto | Sieterosas" description="Consulta disponibilidad y pide información.">
  <section class="max-w-6xl mx-auto px-6 py-16">
    <h1 class="font-serif text-4xl mb-6 text-gray-800">Contacto</h1>
    <div class="grid md:grid-cols-3 gap-6 mb-12">
      <a href={`tel:${phone}`} class="p-6 bg-white rounded-2xl shadow hover:shadow-lg transition"><div class="text-sm text-gray-400">Teléfono</div><div class="text-lg mt-1">{phone}</div></a>
      <a href={`mailto:${email}`} class="p-6 bg-white rounded-2xl shadow hover:shadow-lg transition"><div class="text-sm text-gray-400">Email</div><div class="text-lg mt-1">{email}</div></a>
      <a href={whatsapp} target="_blank" class="p-6 bg-white rounded-2xl shadow hover:shadow-lg transition"><div class="text-sm text-gray-400">WhatsApp</div><div class="text-lg mt-1">Abrir chat</div></a>
    </div>
    <form action={`mailto:${email}`} method="post" encType="text/plain" class="bg-white rounded-2xl shadow p-6 grid gap-4 max-w-2xl">
      <input class="w-full rounded-xl border border-gray-200 px-4 py-2" name="nombre" placeholder="Nombre" required />
      <div class="grid md:grid-cols-2 gap-4">
        <input type="email" class="w-full rounded-xl border border-gray-200 px-4 py-2" name="email" placeholder="Email" required />
        <input class="w-full rounded-xl border border-gray-200 px-4 py-2" name="telefono" placeholder="Teléfono" />
      </div>
      <textarea class="w-full rounded-xl border border-gray-200 px-4 py-2 h-32" name="mensaje" placeholder="Cuéntanos tu idea" required></textarea>
      <button class="px-5 py-2 rounded-xl bg-gray-900 text-white hover:bg-gray-800">Enviar</button>
    </form>
  </section>
</BaseLayout>
